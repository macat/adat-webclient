<div class="widget-menu">
  <span class="trigger"><i class="icon-chevron-down"></i></span>
  <ul>
    <li {{action "edit"}}>Edit</li>
    <li {{action "delete"}}>Delete</li>
    <li {{action "showTable"}}>Show Table</li>
    <li {{action "export"}}>Export</li>
  </ul>
</div>
<h3>{{ content.title }}</h3>
{{#if editing }}
  <div class="widget-editing">
    <form class="pure-form">
      <fieldset>
        {{#each items itemController="widgetItem" }}
          {{item-edit item=this }}
        {{/each}}
        <button {{action 'addItem'}} class="pure-button pure-button-small"><i class="add icon-plus"></i></button>
      </fieldset>
    </form>
    <button {{action done}}>Done</button>
  </div>
{{/if}}
<div class="widget-content">
  {{yield}}
</div>
