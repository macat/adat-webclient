
<div id="layout" class="pure-g">
  {{#if isAuthenticated }}
  <div id="nav" class="pure-u">
    <h3 id="title"><a href="#/">ADAT BOSS</a></h3>
    <div class="pure-menu pure-menu-open">
      <div class="pure-menu-heading">Dashboards<i class="add icon-plus"></i></div>
      <ul>
        {{#each dashboards }}
          <li>
            {{#link-to 'dashboard' this}}
            {{ title }}
            {{/link-to}}
          </li>
        {{/each}}
      </ul>
    </div>
    <div id="nav-footer">
      <button class="pure-button pure-button-small" {{action "logout"}}><i class="icon-cogs"></i></button>
      <button class="pure-button pure-button-small bg-maroon" {{action "logout"}}><i class="icon-off"></i></button>
    </div>
  </div>
  {{/if}}
  <div id="main" class="pure-u-1">{{outlet}}</div>
</div>
