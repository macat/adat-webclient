<form class="pure-form pure-form-stacked">  <fieldset>    <legend>{{name}}</legend>    <div class="pure-control-group">      Created: {{ created }}    </div>    <div class="pure-control-group">      <label>Name:</label>      {{input value=name}}    </div>    <div class="pure-control-group">      <label>Email:</label>      {{input value=email}}    </div>    <button type="submit" class="pure-button pure-button-primary">Save</button>  </fieldset></form>