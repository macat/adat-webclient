<div class="widget-menu">
  <span class="trigger"><i class="icon-chevron-down"></i></span>
  <ul>
    <li {{action "edit"}}>Edit</li>
    <li {{action "delete"}}>Delete</li>
    <li {{action "showTable"}}>Show Table</li>
    <li {{action "export"}}>Export</li>
  </ul>
</div>
<h3>{{ content.title }}</h3>
{{#if editing }}
  <div class="widget-editing">
    <form class="pure-form">
      <div class="pure-g-r">
        <div class="pure-u-1-3">
          <fieldset>
            <legend>General</legend>
            <div class="pure-control-group">
              <label {{bindAttr for="view.title.elementId"}}>Title: </label>
              {{input value=title viewName="title"}}
            </div>
          </fieldset>
        </div>
        <div class="pure-u-2-3">
          <fieldset>
            <legend>Items</legend>
            {{#each items itemController="widgetItem" }}
              {{item-edit item=this }}
            {{/each}}
            <button {{action 'addItem'}} class="pure-button pure-button-xsmall bg-green"><i class="add icon-plus"></i> Add new</button>
          </fieldset>
        </div>
      </div>
      <div class="pure-controls">
        <button class="pure-button" {{action save}}>Save</button>
      </div>
    </form>
  </div>
{{/if}}
<div class="widget-content">
  {{yield}}
</div>
